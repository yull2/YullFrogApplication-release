<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorToolbarbg</item>
        <item name="colorPrimaryDark">@color/colorStatusbarbg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightTheme" parent="@android:style/Theme.Light" />

    <style name="BlackTheme" parent="@android:style/Theme.Black" />

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
        <item name="colorControlNormal">@color/colorTextPriview</item>
        <item name="colorControlActivated">@color/colorTextPriview</item>
        <item name="colorControlHighlight">@color/colorTextPriview</item>
    </style>

    <style name="CustomActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorToolbarbg</item>
        <item name="background">@color/colorToolbarbg</item>
    </style>

    <style name="starRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_ratingbar_full</item>
        <item name="android:minHeight">30dip</item>
        <item name="android:maxHeight">30dip</item>

    </style>

</resources>
