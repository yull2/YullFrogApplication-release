<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="328dp"
    android:layout_marginBottom="8dp"
    android:layout_height="220dp"
    android:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">
            <ImageView
                android:layout_width="41dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_note"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:gravity="center_vertical"
                android:text="Medium Text"
                android:textSize="12dp"
                android:textColor="@color/colorBasicTextGray"
                android:id="@+id/text_writedate"
                android:paddingStart="41dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/linearLayout"
            android:background="@color/colorSingleLine"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/linearLayout"
            android:id="@id/linearLayout3">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_logo"
                android:scaleType="fitStart"
                android:background="@color/colorSingleLine"
                android:layout_marginStart="13dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="Medium Text"
                android:textSize="16dp"
                android:textColor="@color/colorBasicTextBlack"
                android:id="@+id/text_classinfo"
                android:layout_marginStart="14dp"
                android:layout_toEndOf="@+id/img_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="Small Text"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="@color/colorBasicTextGray"
                android:id="@+id/text_term"
                android:layout_marginTop="5dp"
                android:layout_marginStart="14dp"
                android:layout_below="@+id/text_classinfo"
                android:layout_toEndOf="@+id/img_logo" />

            <TextView
                android:layout_width="294dp"
                android:layout_height="47dp"
                android:text="Large Text"
                android:textColor="@color/colorBasicTextBlack"
                android:textSize="16dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:id="@+id/text_commendgood"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:layout_below="@+id/img_logo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="30dp"
            android:layout_marginTop="23dp"
            android:layout_marginStart="18dp"
            android:orientation="horizontal"
            android:background="@drawable/main_bluebox2"
            android:layout_below="@+id/linearLayout3">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorBasicTextGray"
                android:textSize="12dp"
                android:text="면접 난이도"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Medium Text"
                android:id="@+id/text_level"
                android:textColor="@color/colorTextBluebox"
                android:textSize="12dp"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/text_info" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/colorBasicTextGray"
                android:textSize="12dp"
                android:text="면접 결과"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Medium Text"
                android:id="@+id/text_info"
                android:textColor="@color/colorTextBluebox"
                android:textSize="12dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/text_level" />
        </LinearLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>