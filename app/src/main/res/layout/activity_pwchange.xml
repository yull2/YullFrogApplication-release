<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.frogoutofwell.yullfrogapplication.account.PWChangeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/imageView2"
        android:src="@drawable/individual_text_for_pw"
        android:layout_marginTop="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:hint="@string/current_pw"
        android:ems="10"
        android:id="@+id/edit_current"
        android:layout_marginTop="37dp"
        android:paddingStart="21dp"
        android:textColor="@color/colorTextPriview"
        android:textSize="13dp"
        android:background="@color/colorWhite"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:hint="@string/new_password"
        android:ems="10"
        android:id="@+id/edit_newpw"
        android:background="@color/colorWhite"
        android:layout_marginTop="8dp"
        android:paddingStart="21dp"
        android:textColor="@color/colorTextPriview"
        android:textSize="13dp"
        android:layout_below="@+id/edit_current"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="328dp"
        android:layout_height="48dp"
        android:inputType="textPassword"
        android:hint="@string/new_pw_check"
        android:ems="10"
        android:id="@+id/edit_newpwcheck"
        android:background="@color/colorWhite"
        android:layout_marginTop="8dp"
        android:paddingStart="21dp"
        android:textColor="@color/colorTextPriview"
        android:textSize="13dp"
        android:layout_below="@+id/edit_newpw"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/edit_newpwcheck"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/btn_cancel"
            android:background="@drawable/individual_btn_cancle"
            android:layout_below="@+id/edit_newpwcheck"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text=""
            android:id="@+id/btn_save"
            android:background="@drawable/individual_btn_save"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/edit_newpwcheck"/>

    </LinearLayout>

</RelativeLayout>
