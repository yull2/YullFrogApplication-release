<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="328dp"
    android:layout_height="275dp"
    android:layout_marginTop="8dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:id="@+id/linearLayout1">

            <TextView
                android:layout_width="52dp"
                android:layout_height="33dp"
                android:text="3.5"
                android:textColor="@color/colorBasicTextBlack"
                android:textSize="30dp"
                android:layout_marginTop="11dp"
                android:layout_marginStart="17dp"
                android:id="@+id/text_rate" />

            <ImageView
                android:layout_width="74dp"
                android:layout_height="16dp"
                android:id="@+id/img_rate"
                android:src="@drawable/star_on"
                android:layout_marginTop="4dp"
                android:layout_marginStart="3dp"
                android:layout_below="@+id/text_rate" />

            <TextView
                android:layout_width="247dp"
                android:layout_height="46dp"
                android:text="Large Text"
                android:id="@+id/text_comment"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="15dp"
                android:textColor="@color/colorBasicTextBlack"
                android:layout_marginTop="13dp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text_rate" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSingleLine"
            android:id="@+id/line"
            android:layout_below="@+id/linearLayout1"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="도움되는 점"
                android:textColor="@color/colorTextGood"
                android:layout_marginTop="15dp"
                android:layout_marginStart="12dp"
                android:textSize="13dp"
                android:id="@+id/textView20"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="294dp"
                android:layout_height="46dp"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorBasicTextGray"
                android:text="Medium Text"
                android:id="@+id/text_commendgood"
                android:layout_marginTop="3dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_below="@+id/textView20"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="아쉬운 점"
                android:textSize="13dp"
                android:textColor="@color/colorTextBad"
                android:layout_marginTop="15dp"
                android:layout_marginStart="12dp"
                android:id="@+id/textView22"
                android:layout_below="@+id/text_commendgood"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="294dp"
                android:layout_height="46dp"
                android:textSize="15dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/colorBasicTextGray"
                android:text="Medium Text"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="3dp"
                android:id="@+id/text_commentbad"
                android:layout_below="@+id/textView22"
                android:layout_alignParentStart="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="@string/inter_do_more"
                android:textSize="12dp"
                android:textColor="@color/colorMoreDetail"
                android:id="@+id/btn_detail"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="17dp"
                android:background="@null"
                android:layout_below="@+id/text_commentbad"
                android:layout_alignEnd="@+id/text_commentbad" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>