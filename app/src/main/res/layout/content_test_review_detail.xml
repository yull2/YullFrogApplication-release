<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="8dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    android:background="@color/colorWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.frogoutofwell.yullfrogapplication.testreview.TestReviewDetailActivity"
    tools:showIn="@layout/activity_test_review_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:text="Large Text"
            android:textSize="16dp"
            android:textColor="@color/colorTextTitle"
            android:id="@+id/text_term"
            android:gravity="center_vertical"
            android:layout_marginTop="14dp"
            android:layout_marginStart="12dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:id="@+id/linearLayout3"
            android:layout_marginTop="14dp"
            android:layout_marginStart="12dp"
            android:layout_below="@+id/text_name"
            android:background="@drawable/main_bluebox2"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/test_level"
                android:textColor="@color/colorBasicTextGray"
                android:textSize="12dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Small Text"
                android:textSize="12dp"
                android:textColor="@color/colorTextBluebox"
                android:gravity="center"
                android:id="@+id/text_level" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/test_result"
                android:textColor="@color/colorBasicTextGray"
                android:textSize="12dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="Small Text"
                android:textSize="12dp"
                android:textColor="@color/colorTextBluebox"
                android:gravity="center"
                android:id="@+id/text_result"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="12dp"
            android:text="@string/question_title"
            android:textSize="13dp"
            android:textColor="@color/colorTextGood"
            android:id="@+id/textView15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:layout_marginStart="12dp"
            android:layout_marginTop="9dp"
            android:textSize="15dp"
            android:textColor="@color/colorBasicTextGray"
            android:id="@+id/text_commendgood" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="12dp"
            android:text="@string/answer_title"
            android:textSize="13dp"
            android:textColor="@color/colorTextBluebox"
            android:id="@+id/textView17" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:layout_marginStart="12dp"
            android:layout_marginTop="9dp"
            android:textSize="15dp"
            android:textColor="@color/colorBasicTextGray"
            android:id="@+id/text_answer" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginTop="35dp"
            android:layout_marginStart="12dp"
            android:textSize="13dp"
            android:text="@string/test_way"
            android:id="@+id/textView18" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="9dp"
            android:text="Medium Text"
            android:textSize="15dp"
            android:textColor="@color/colorBasicTextGray"
            android:id="@+id/text_way" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="@color/colorBasicTextGray"
                android:layout_marginStart="32dp"
                android:text="이 후기가 도움이 되었나요?"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="82dp"
                android:layout_height="28dp"
                android:text=""
                android:background="@drawable/ic_yesbox"
                android:id="@+id/btn_yes"
                android:layout_marginEnd="40dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>