<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:layout_width="170dp"
    android:layout_height="255dp"
    android:layout_marginBottom="6dp"
    android:layout_marginEnd="6dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="160dp"
            android:layout_height="165dp"
            android:id="@+id/img_logo"
            android:scaleType="centerCrop"
            android:background="@color/colorSingleLine"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignEnd="@+id/text_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:text="Medium Text"
            android:id="@+id/text_name"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:layout_below="@+id/img_logo"
            android:layout_marginStart="9dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="6dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:text="com"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:id="@+id/text_company"
            android:layout_marginStart="9dp"
            android:layout_below="@+id/text_name" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="17dp"
            android:text="act"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:id="@+id/text_info"
            android:textSize="13dp"
            android:textColor="@color/colorActClass"
            android:layout_marginStart="9dp"
            android:layout_below="@+id/text_company"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="17dp"
            android:text="/"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/text_info"
            android:layout_toEndOf="@+id/text_info"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="35dp"
            android:layout_height="17dp"
            android:text="d"
            android:id="@+id/text_due"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:layout_alignTop="@+id/text_info"
            android:layout_toEndOf="@+id/textView" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text="3"
            android:id="@+id/text_rate"
            android:gravity="end"
            android:textSize="12dp"
            android:paddingEnd="9dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/main_starbox"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>