<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.frogoutofwell.yullfrogapplication.login.StudentConfirmActivity"
    tools:showIn="@layout/activity_student_confirm">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="220dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textSize="11dp"
            android:textColor="@color/colorBasicTextGray"
            android:paddingStart="37dp"
            android:text="@string/student_confirm"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/edit_email"
            android:hint="대학교 이메일 주소"
            android:textColor="@color/colorTextPriview"
            android:textSize="13dp"
            android:layout_marginTop="8dp"
            android:paddingStart="20dp"
            android:background="@drawable/login_4_bg_box"
            android:layout_below="@+id/linearLayout5"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:layout_marginTop="33dp"
            android:background="@drawable/login_4_btn_confirm"
            android:id="@+id/btn_submit"/>

    </LinearLayout>

    <Button
        android:layout_width="328dp"
        android:layout_height="54dp"
        android:text=""
        android:id="@+id/btn_finish"
        android:background="@drawable/login_4_btn_finish"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="226dp"
        android:layout_marginBottom="54dp" />

</RelativeLayout>
