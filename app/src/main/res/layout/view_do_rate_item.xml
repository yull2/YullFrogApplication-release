<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="360dp"
    android:layout_height="130dp"
    android:background="@color/colorWhite"
    android:layout_marginTop="8dp">

    <TextView
        android:layout_width="130dp"
        android:layout_height="17dp"
        android:id="@+id/textView11"
        android:text="@string/average_rate"
        android:textSize="12dp"
        android:textColor="@color/colorBasicTextBlack"
        android:paddingStart="34dp"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:text="Large Text"
        android:id="@+id/text_rate"
        android:textSize="34dp"
        android:textColor="@color/colorBasicTextBlack"
        android:gravity="center"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="115dp"
        android:layout_height="25dp"
        android:id="@+id/img_rate"
        android:paddingStart="20dp"
        android:src="@drawable/star_on"
        android:layout_below="@+id/text_rate"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="43dp"
        android:layout_height="130dp"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_stars"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/text_rate" />

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/imageView3"
        android:id="@+id/linearLayout7">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/inter_rate5"
            android:layout_marginBottom="1dp"
            android:background="@color/colorWhite" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/inter_rate4"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:background="@color/colorWhite" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/inter_rate3"
            android:layout_marginBottom="1dp"
            android:background="@color/colorWhite" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/inter_rate2"
            android:layout_marginBottom="1dp"
            android:background="@color/colorWhite" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/inter_rate1"
            android:background="@color/colorWhite" />

    </LinearLayout>

</RelativeLayout>