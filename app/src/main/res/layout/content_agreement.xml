<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.frogoutofwell.yullfrogapplication.login.AgreementActivity"
    tools:showIn="@layout/activity_agreement">

    <RelativeLayout
        android:layout_width="328dp"
        android:layout_height="364dp"
        android:id="@id/linearLayout"
        android:background="@color/colorWhite">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_marginTop="8dp"
            android:text="이용약관보기"
            android:textSize="11dp"
            android:textColor="@color/colorBasicTextGray"
            android:background="@null"
            android:id="@+id/btn_look"
            android:paddingStart="21dp"
            android:layout_marginEnd="24dp"
            android:layout_alignParentEnd="true" />

        <CheckBox
            android:layout_width="280dp"
            android:layout_height="48dp"
            android:text="@string/agree_essential"
            android:id="@+id/btn_essential"
            android:layout_marginTop="12dp"
            android:button="@null"
            android:textSize="13dp"
            android:textColor="@color/colorBasicTextGray"
            android:paddingStart="21dp"
            android:background="@drawable/agreement_checkbox_selector"
            android:layout_below="@+id/btn_look"
            android:layout_centerHorizontal="true" />

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="142dp"
            android:id="@+id/linearLayout1"
            android:layout_marginTop="12dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_essential">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="142dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="21dp"
                    android:text="@string/agree_look"
                    android:textSize="13dp"
                    android:textColor="@color/colorBasicTextGray"
                    android:id="@+id/textView30" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:paddingStart="21dp"
                    android:textSize="13dp"
                    android:textColor="@color/colorBasicTextGray"
                    android:background="@drawable/agreement_check_selector"
                    android:text="@string/agree_look1"
                    android:id="@+id/btn_agreelook1" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:button="@null"
                    android:paddingStart="21dp"
                    android:textSize="13dp"
                    android:textColor="@color/colorBasicTextGray"
                    android:background="@drawable/agreement_check_selector"
                    android:text="@string/agree_look2"
                    android:id="@+id/btn_agreelook2" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/login_bg_box_mid"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="72dp"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/linearLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/login_bg_box_bottom"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:text="@string/agree_select"
                android:id="@+id/btn_select"
                android:background="@drawable/agreeselect_check_selector"
                android:button="@null"
                android:textSize="13dp"
                android:textColor="@color/colorBasicTextGray"
                android:paddingStart="21dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:paddingStart="21dp"
                android:textSize="13dp"
                android:textColor="@color/colorSignupNotice"
                android:text="@string/agree_select_detail"/>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_width="328dp"
        android:layout_height="54dp"
        android:text=""
        android:id="@+id/btn_allagree"
        android:background="@drawable/login_3_btn_agree"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:layout_width="328dp"
        android:layout_height="54dp"
        android:text=""
        android:id="@+id/btn_submit"
        android:layout_marginTop="13dp"
        android:background="@drawable/login_3_btn_next"
        android:layout_below="@+id/btn_allagree"
        android:layout_alignParentStart="true" />

</RelativeLayout>
