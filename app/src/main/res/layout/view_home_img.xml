<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/image_homemain"
            android:layout_width="328dp"
            android:layout_height="180dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/img_01" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_homemain"
            android:orientation="horizontal">
                <ImageView
                    android:id="@+id/image_homestart"
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    android:background="@color/colorSingleLine"
                    android:layout_marginTop="8dp"
                    android:scaleType="centerCrop"
                    android:layout_below="@+id/image_homemain"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:id="@+id/image_homeend"
                    android:layout_width="160dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:background="@color/colorSingleLine"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignTop="@+id/image_homestart"
                    android:layout_toEndOf="@+id/image_homestart" />

        </LinearLayout>

</RelativeLayout>